@model TeamTwoBe.Models.User

@{
    ViewBag.Title = "Shoppingcart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</head>
<body>

    <h2 style="text-align: center">Shopping Cart</h2>

    <table class="table table-hover table-bordered">
        <tr>
            <th>Image</th>
            <th>Card Details</th>
        </tr>
        @foreach (var item in Model.ShoppingCart)
        {
            <tr>
                <td style="text-align: center"><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="306" width="210" class="lozad" src="https://upload.wikimedia.org/wikipedia/commons/c/c0/Blank.gif" data-src="@item.Card.image_url" /></div></td>
                <td>
                    <div id="loading">
                        <h4><b>Name:</b> @item.Card.name</h4>
                        <p><b>Card Type:</b> @item.Card.Cardtype.Name</p>
                        <p><b>Set:</b> @item.Card.print_tag</p>
                        <p><b>Rarity:</b> @item.Card.rarity</p>
                        <p><b>Price:</b> @item.Price.ToString("c2")</p>
                        <p><b>Grade:</b> @item.CardGrade.Grading <b>Condition:</b> @item.CardCondition.CardCondition</p>
                        <p><b>Seller: </b>@Html.ActionLink(item.Seller.Username, "Profile", "Users", new { id = item.Seller.ID }, new { @class = "Active" })</p>
                        <p><b>Current watchers:</b> @item.Watcher.Count</p>
                        <a>@Html.ActionLink("Buy", "purchaseCard", new { id = item.ID }, new { @class = "btn btn-primary" })</a>
                        <a>@Html.ActionLink("Remove from Shopping cart", "removeFromShoppingCart", new { id = item.ID }, new { @class = "btn btn-primary" })</a>
                    </div>
                </td>
            </tr>
        }
    </table>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.babel.min.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading2.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</body>