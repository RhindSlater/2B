@model TeamTwoBe.ViewModels.ListCardListSale
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</head>

<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>

    @if (Model != null)
    {
        <h2 id="sales" style="text-align:center;">Sales</h2>
        <div id="AllCards" class="container">
            <div class="row">
                @if (Model.Sales.Count > 0)
                {
                    foreach (var item in Model.Sales.Where(x => x.ForAuction == false))
                    {
                        <div class=" lozad" id="CardGird">
                            <div id="Card">
                                <div data-toggle="modal" data-target="#myModal" id="CardImage">
                                    <a><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.Card.image_url" /></div></a>
                                </div>
                                <div id="DetailGrid">
                                    <div id="Detail">
                                        <a><p id="CardName">@item.Card.name</p></a>
                                        <div>
                                            <a id="seller" href="/Users/Profile/@item.Seller.ID">@item.Seller.Username</a>
                                            <p id="watchcount">@item.Watcher.Count watchers - @item.UploadDate.ToString("dd/MM/yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <br />
        </div>

        <h2 id="sales" style="text-align:center;">Cards</h2>
        <div id="AllCards" class="container">
            <div class="row">
                @if (Model.Cards.Count > 0)
                {
                    foreach (var item in Model.Cards)
                    {
                        <div class=" lozad" id="CardGird">
                            <div id="Card">
                                <div data-toggle="modal" data-target="#myModal" id="CardImage">
                                    <a><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.image_url" /></div></a>
                                </div>
                                <div id="DetailGrid">
                                    <div id="Detail">
                                        <a><p id="CardName">@item.name @item.print_tag</p></a>
                                        <div>
                                            @*<a id="seller" href="/Users/Profile/@item.Seller.ID">@item.Seller.Username</a>
                                                <p id="watchcount">@item.Watcher.Count watchers - @item.UploadDate.ToString("dd/MM/yyyy")</p>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <br />
        </div>

        <h2 id="sales" style="text-align:center;">Users</h2>
        <div id="AllCards" class="container">
            <div class="row">
                @if (Model.Users.Count > 0)
                {
                    foreach (var item in Model.Users)
                    {
                        <div class=" lozad" id="CardGird">
                            <div id="Card">
                                <div data-toggle="modal" data-target="#myModal" id="CardImage">
                                    <a><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.DisplayPicture" /></div></a>
                                </div>
                                <div id="DetailGrid">
                                    <div id="Detail">
                                        <a><p id="CardName">@item.Username</p></a>
                                        <div>
                                            @*<a id="seller" href="/Users/Profile/@item.Seller.ID">@item.Seller.Username</a>
                                                <p id="watchcount">@item.Watcher.Count watchers - @item.UploadDate.ToString("dd/MM/yyyy")</p>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    }

    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.babel.min.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading2.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</body>




