@model List<TeamTwoBe.Models.Sale>
@{
    ViewBag.Title = "2B - Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
    <script type="text/javascript" src="~/CSS/Card.css"></script>
    <h2 id="sales" style="text-align:center;">Sales</h2>
    @if (Model != null)
    {
        <div id="AllCards" class="container">
            <div class="row">
                @foreach (var item in Model.Where(x => x.ForAuction == false))
                {
                    <div class="col-xl-2 col-lg-3 col-lg-offset-1 col-md-4 col-sm-6" id="CardGird">
                        <div id="Card">
                            <div id="CardImage">
                                <a href=""><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.Card.image_url" /></div></a>
                            </div>
                            <div id="DetailGrid">
                                <div id="Detail">
                                    <a href=""><p id="CardName">@item.Card.name @item.Card.print_tag</p></a>
                                    <div>
                                        <a id="seller" href="/Users/Profile/@item.Seller.ID">@item.Seller.Username</a>
                                        <p id="watchcount">@item.Watcher.Count watchers - @item.UploadDate.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.babel.min.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading2.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</body>