@model TeamTwoBe.ViewModels.ProfileViewModel
@{
    ViewBag.Title = " Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</head>
<body>
    <div style="text-align:center;">
        <h2>@Model.MyUser.Username's profile</h2>

        <div style="display:inline-block;">
            @if (Model.MyUser.ID.ToString() == Session["UserID"].ToString())
            {
                <div id="CurrentSales">
                    <div style="display:flex">
                        <h3 id="sales" style="text-align:center;">My Listings</h3>
                        <a id="sales" style="height:20%; text-align:center; padding-top:10px; margin-left:78%">@Html.ActionLink("See all", "MyListings", "Sales", new {id = Model.MyUser.ID }, new { @class = "" })</a>
                    </div>
                    <div id="AllCards" class="container">
                        <div class="row">
                            @foreach (var item in Model.MySales)
                            {
                                <div class=" lozad" id="CardGird">
                                    <div id="Card">
                                        <div data-toggle="modal" data-target="#myModal" id="CardImage">
                                            <a><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.Card.image_url" /></div></a>
                                        </div>
                                        <div id="DetailGrid">
                                            <div id="Detail">
                                                <a style="text-align:center;"><p id="CardName">@item.Card.name</p></a>
                                                <div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div id="ProfileWatchlist">
                    <div style="display:flex">
                        <h3 id="sales" style="text-align:center;">My Watchlist</h3>
                        <a id="sales" style="height:20%; text-align:center; padding-top:10px; margin-left:78%">@Html.ActionLink("See all", "Watchlist", "Profile", new { id = Model.MyUser.ID }, new { @class = "" })</a>
                    </div>
                     <div id="AllCards" class="container">
                        <div class="row">
                            @foreach (var item in Model.MyWatchList)
                            {
                                <div class=" lozad" id="CardGird">
                                    <div id="Card">
                                        <div data-toggle="modal" data-target="#myModal" id="CardImage">
                                            <a><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.Card.image_url" /></div></a>
                                        </div>
                                        <div id="DetailGrid">
                                            <div id="Detail">
                                                <a style="text-align:center;"><p id="CardName">@item.Card.name</p></a>
                                                <div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div id="ProfileCollection">
                    <div style="display:flex">
                        <h3 id="sales" style="text-align:center;">My Collection</h3>
                        <a id="sales" style="height:20%; text-align:center; padding-top:10px; margin-left:78%">@Html.ActionLink("See all", "Collection", "Profile", new { id = Model.MyUser.ID }, new { @class = "" })</a>
                    </div>
                        <div id="AllCards" class="container">
                            <div class="row">
                                @foreach (var item in Model.MyCollection)
                                {
                                    <div class=" lozad" id="CardGird">
                                        <div id="Card">
                                            <div data-toggle="modal" data-target="#myModal" id="CardImage">
                                                <a><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.image_url" /></div></a>
                                            </div>
                                            <div id="DetailGrid">
                                                <div id="Detail">
                                                    <a style="text-align:center;"><p id="CardName">@item.name</p></a>
                                                    <div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                <div id="ProfileWishlist">
                    <div style="display:flex">
                        <h3 id="sales" style="text-align:center;">My Wishlist</h3>
                        <a id="sales" style="height:20%; text-align:center; padding-top:10px; margin-left:78%">@Html.ActionLink("See all", "Wishlist", "Profile", new { id = Model.MyUser.ID }, new { @class = "" })</a>
                    </div>
                    <div id="AllCards" class="container">
                        <div class="row">
                            @foreach (var item in Model.MyWishList)
                            {
                                <div class=" lozad" id="CardGird">
                                    <div id="Card">
                                        <div data-toggle="modal" data-target="#myModal" id="CardImage">
                                            <a><div data-tilt data-tilt-glare="true" style="display:inline-block;"><img height="313" width="215" class="lozad" src="~/Properties/blank.jpg" data-src="@item.image_url" /></div></a>
                                        </div>
                                        <div id="DetailGrid">
                                            <div id="Detail">
                                                <a style="text-align:center;"><p id="CardName">@item.name</p></a>
                                                <div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <a href="/users/edit/@Session["UserID"]">Edit Profile</a>
                <a> My Reviews and Ratings</a>

            }
            else
            {
                <a href="/Sales/MyListings/@Model.MyUser.ID">Current Sales</a>
                <a>Reviews and Ratings</a>
                <a href="/profile/collection/@Model.MyUser.ID">Collection</a>
                <a href="/profile/wishlist/@Model.MyUser.ID">Wishlist</a>
            }
        </div>
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.7.0/vanilla-tilt.babel.min.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading.js"></script>
    <script type="text/javascript" src="~/Scripts/lazyloading2.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js"></script>
</body>
