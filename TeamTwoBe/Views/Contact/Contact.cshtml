
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .contact {
        padding: 4%;
        height: 400px;
    }

    .col-md-3 {
        background: #ff9b00;
        padding: 4%;
        border-top-left-radius: 0.5rem;
        border-bottom-left-radius: 0.5rem;
    }

    .contact-info {
        margin-top: 10%;
    }

        .contact-info img {
            margin-bottom: 15%;
        }

        .contact-info h2 {
            margin-bottom: 10%;
        }

    .col-md-9 {
        background: #fff;
        padding: 3%;
        border-top-right-radius: 0.5rem;
        border-bottom-right-radius: 0.5rem;
    }
    .col-md-11 {
        background: #fff;
        padding: 3%;
        border-top-right-radius: 0.5rem;
        border-bottom-right-radius: 0.5rem;
    }

    .contact-form label {
        font-weight: 600;
    }

    .contact-form button {
        background: #25274d;
        color: #fff;
        font-weight: 600;
        width: 25%;
    }

        
    .contact-form button:focus {
            box-shadow: none;
        }
</style>
@if (ViewBag.Error != null)
{
    <h2>@ViewBag.Error</h2>
}

<div class="container ">
    <form method="post" action="Form">
        <div class="row">
            <div class="col-md-3">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
                    <h2>Contact Us</h2>
                    <h4>We would love to hear from you !</h4>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                    <div class="form-group">
                        <span class="control-label col-sm-2" for="Email"> Email:</span>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" name="email" placeholder="Please enter your email" >
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <span class="control-label col-sm-2" for="Subject">Subject:</span>
                        <div class="col-sm-10">
                            <input type="text" class="form-control"  placeholder="Enter subject" name="subject">
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="control-label col-sm-2" for="Message">Message:</span>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5"  name="Message"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-11">
                <address>
                    123 Broadway, Newmarket<br />
                    Auckland, New Zealand <br />
                    <abbr title="Phone">P:</abbr>
                    +640222222222
                </address>

                <address>
                    <strong>Support:</strong>   <a href="mailto:teamb7692@gmail.com">teamb7692@gmail.com</a><br />
                </address>
            </div>
        </div>
    </form>
    </div>



