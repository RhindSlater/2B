@model TeamTwoBe.ViewModels.Money
@{
    ViewBag.Title = "purchaseVerifiedCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; margin-top:8%; margin-bottom:2%;">Purchase a Verified Card!</h2>

<script src="https://js.stripe.com/v3/"></script>
<div id="base">
    <div id="purchase-div">
    <form action="/Profile/purchaseVerifiedCard/" method="POST">
        <article>
            <label id="SideMarginAuto">Card: @Model.MySale.Card.name</label>
            <br />
            <label id="SideMarginAuto">Amount: @Model.MySale.Price.ToString("c2")</label>
        </article>
        <script src="//checkout.stripe.com/v3/checkout.js"
                class="stripe-button"
                data-key="pk_test_it8IfmJsPFnu7cXmNXb8aSp300FSV94EfE"
                data-locale="auto"
                data-description="Card Purchase"
                data-amount="@Model.MyMoney">
        </script>
    </form>
    </div>
</div>