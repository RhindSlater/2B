@model TeamTwoBe.ViewModels.PremiumViewModel

@{
    ViewBag.Title = "Premium";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <script src="https://js.stripe.com/v3"></script>

    <div id="PremiumDiv" class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 id="PremiumTitle">2B Premium</h3>
            </div>
            <div style="padding-left:25px;" class="row">
                <div class="col-lg-4" id="PremiumDetails">
                    <span id="PremiumHeading">User:</span>
                </div>
                <div class="col-lg-8" id="PremiumDetails">
                    <span id="PremiumResult">@Model.MyUser.Username</span>
                </div>
                <div class="col-lg-4" id="PremiumDetails">
                    <span id="PremiumHeading">Status:</span>
                </div>
                <div class="col-lg-8" id="PremiumDetails">
                    <span id="PremiumResult">@Model.MyUser.UserLevel.AccountLevel</span>
                </div>
                <div class="col-lg-4" id="PremiumDetails">
                    <span id="PremiumHeading">Price:</span>
                </div>
                <div class="col-lg-8" id="PremiumDetails">
                    <span id="PremiumResult">NZ$11.99/month</span>
                </div>
                @if (Model.MyUser.UserLevel.ID != 2)
                {
                    <div class="col-lg-4" id="PremiumDetails">
                        <span id="PremiumHeading">Next bill date:</span>
                    </div>
                    <div class="col-lg-8" id="PremiumDetails">
                        <span id="PremiumResult">@Model.MyBilling.NextBillingDate.ToString("dd MMM yyyy")</span>
                    </div>
                }


                <div class="col-lg-12">
                    <span id="PremiumButton">Update Payment Method</span>
                </div>

                @if (Model.MyUser.UserLevel.ID == 2)
                {
                    <div class="col-lg-12">
                        <span data-toggle="modal" data-target="#BecomeMember" id="PremiumButton">Become premium member</span>
                    </div>
                }
                else
                {
                    <div class="col-lg-12">
                        <span data-toggle="modal" data-target="#CancelMember" id="PremiumButton">Cancel subscription</span>
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="BecomeMember" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div id="modal-header1">
                        Become Premium Member
                    </div>
                </div>
                <div class="modal-body">
                    <button style="background-color:#6772E5;color:#FFF;padding:8px 12px;border:0;border-radius:4px;font-size:1em"
                            id="checkout-button-plan_F75pO616xMgJCn"
                            role="link">
                        Checkout
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div id="CancelMember" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div id="modal-header1">
                        Cancel Premium Membership
                    </div>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div id="error-message"></div>
    <script>
        var stripe = Stripe('pk_test_it8IfmJsPFnu7cXmNXb8aSp300FSV94EfE');

        var checkoutButton = document.getElementById('checkout-button-plan_F75pO616xMgJCn');
        checkoutButton.addEventListener('click', function () {
            // When the customer clicks on the button, redirect
            // them to Checkout.
            stripe.redirectToCheckout({
                items: [{ plan: 'plan_F75pO616xMgJCn', quantity: 1 }],

                // Do not rely on the redirect to the successUrl for fulfilling
                // purchases, customers may not always reach the success_url after
                // a successful payment.
                // Instead use one of the strategies described in
                // https://stripe.com/docs/payments/checkout/fulfillment
                successUrl: 'http://localhost:50637/users/subscription/success',
                cancelUrl: 'http://localhost:50637/users/premium',
            })
                .then(function (result) {
                    if (result.error) {
                        // If `redirectToCheckout` fails due to a browser or network
                        // error, display the localized error message to your customer.
                        var displayError = document.getElementById('error-message');
                        displayError.textContent = result.error.message;
                    }
                });
        });
    </script>
</body>

